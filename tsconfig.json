{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {},
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "exclude": ["node_modules", "playwright-report", "test-results", "env"]
}
